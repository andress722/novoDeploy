<html lang="en">

    <%- include("../partials/head")%>

<body>
    <%- include("../partials/header") %>
    <main>
        <section class="contato">
            <div class="container">
                <h1>Editar Categoria <%= produto.id %> </h1>


                <div class="list-erros"></div>
                <div class="align-row">
                    <form method="POST" method="post" onsubmit="ValidaLogin(event)" novalidate>
                        
