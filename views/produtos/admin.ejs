<html lang="en">
<%- include("../partials/head") %>
<body>
    <%- include("../partials/header") %>
    <main class="d-flex" style="margin-top: 88px; background-color: #f8f9fa;">
        <section class="container-fluid" style="margin-top: 20px;">
            <div class="row">
                <!-- Sidebar -->
                <aside class="col-md-3 bg-dark text-white p-3 rounded">
                    <h3 class="text-center mb-4">Admin Dashboard</h3>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-3">
                            <h4 class="text-center"><%= usuarioLogado.nome %></h4>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link text-white"><i class="bi bi-person-circle"></i> Perfil</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="/superadmin/produtos" class="nav-link text-white"><i class="bi bi-box-seam"></i> Produtos</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="/superadmin/categorias" class="nav-link text-white"><i class="bi bi-tags"></i> Categorias</a>
                        </li>
                        <li class="nav-item">
                            <a href="/superadmin/promocoes" class="nav-link text-white"><i class="bi bi-star-fill"></i> Promocao</a>
                        </li>
                    </ul>
                </aside>
                <!-- Main Content -->
                <section class="col-md-9">
                    <div class="row mb-4">
                        <!-- Cards -->
                        <div class="col-md-4">
                            <div class="card text-white bg-primary mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">Vendas Totais</h5>
                                    <p class="card-text">R$ 500</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-success mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">Produtos Vendidos</h5>
                                    <p class="card-text">25 Unidades</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card text-white bg-warning mb-3">
                                <div class="card-body">
                                    <h5 class="card-title">Novos Clientes</h5>
                                    <p class="card-text">15 Clientes</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Tabela de Informações -->
                    <div class="card">
                        <div class="card-header bg-dark text-white">
                            Informações de Vendas
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Produto</th>
                                        <th>Quantidade Vendida</th>
                                        <th>Valor Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Notebook</td>
                                        <td>10</td>
                                        <td>R$ 10,000</td>
                                    </tr>
                                    <tr>
                                        <td>Mouse</td>
                                        <td>20</td>
                                        <td>R$ 1,000</td>
                                    </tr>
                                    <tr>
                                        <td>Teclado</td>
                                        <td>5</td>
                                        <td>R$ 500</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </main>
    <%- include('../partials/footer') %>
</body>
</html>
