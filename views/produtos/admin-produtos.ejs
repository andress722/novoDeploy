            <tr>
              <td><%= calcas.categoria_id %> </td>
              <td><%= calcas.id  %> </td>
              <td><%= calcas.nome  %>  </td>
              <td><%= calcas.descricao  %></td>
              <td><%= calcas.valor  %></td>
               
