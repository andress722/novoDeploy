              <% }) %> 
              
              </td>
            </tr>
          </div>
      
        </tbody>
      </table> 
        
      </section>
 
  <a href="/superadmin/produtos/criar">Novo produto</a>
  <a href="/superadmin/categorias/criar">Nova categoria</a>
  <a href="/superadmin/promo">Ver itens em favoritos</a>

      
  
</main>
    <%- include("../partials/footer") %>
</body>
